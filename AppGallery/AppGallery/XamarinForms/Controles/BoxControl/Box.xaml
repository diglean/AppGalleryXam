<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.XamarinForms.Controles.BoxControl.Box">
    <ContentPage.Content>
        <StackLayout>
            <BoxView BackgroundColor="#000000" HorizontalOptions="Center" WidthRequest="100" HeightRequest="100"/>
            
            <BoxView BackgroundColor="#000000" HorizontalOptions="Center" WidthRequest="30" HeightRequest="100"/>
            
            <BoxView BackgroundColor="#000000" HorizontalOptions="Center" WidthRequest="1" HeightRequest="100"/>

            <BoxView CornerRadius="30" BackgroundColor="#000000" HorizontalOptions="Center" WidthRequest="100" HeightRequest="100"/>
            <BoxView CornerRadius="1000" BackgroundColor="#000000" HorizontalOptions="Center" WidthRequest="100" HeightRequest="100"/>
            <BoxView CornerRadius="15" BackgroundColor="#000000" HorizontalOptions="Center" WidthRequest="30" HeightRequest="100"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>