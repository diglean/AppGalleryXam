<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.XamarinForms.Layouts.PilhaLayout.Pilha">
    <ContentPage.Content>
        <StackLayout Spacing="0" Margin="3">
            <StackLayout VerticalOptions="FillAndExpand" Padding="10" Orientation="Vertical" BackgroundColor="#707070">
                <Label Text="Linha 01" VerticalOptions="CenterAndExpand" BackgroundColor="White" HorizontalOptions="Center"/>
                <Label Text="Linha 02" BackgroundColor="White" HorizontalOptions="Center"/>
            </StackLayout>
            <StackLayout Padding="10" Orientation="Horizontal" Background="#A0A0A0">
                <Label Text="Linha 01" BackgroundColor="White" HorizontalOptions="CenterAndExpand"/>
                <Label Text="Linha 02" BackgroundColor="White" HorizontalOptions="CenterAndExpand"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>