<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.XamarinForms.Layouts.ContentViews.CardAuthor"
             x:Name="MeuComponente">
  <ContentView.Content >
        <StackLayout Orientation="Horizontal" Spacing="0" BindingContext="{x:Reference MeuComponente}">
            <BoxView WidthRequest="100" HeightRequest="100" Color="{Binding BoxViewColor}"/>
            <StackLayout Padding="10" BackgroundColor="Black" HorizontalOptions="FillAndExpand">
          <Label Text="{Binding Nome}" TextColor="White" FontSize="24"/>
                <Label Text="{Binding Descricao}" TextColor="White" FontSize="18" />
            </StackLayout>
        </StackLayout>
  </ContentView.Content>
</ContentView>